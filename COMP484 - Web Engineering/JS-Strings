<html>
    <head>
        <meta charset="utf-8">
        <title>JS Strings</title>
        <style type="text/css">
        </style>
        <script type="text/javascript">
                        
            document.writeln("The original string: ");
            var input = window.prompt("Please enter the string to reverse: ");
            document.writeln(input+"<br>");
            var inverted="";

            alert("next is the for loop");
            
            for(var i = 0; i < input.length; i++)
            {
            
                var ch = input.charAt(i);

                if(ch === ch.toUpperCase())
                {
                    inverted += ch.toLowerCase();
                }
                else
                {
                    inverted += ch.toUpperCase();
                }           
            }
            
            alert("after the loop");
            document.writeln("The inverted string: ");
            document.writeln(inverted);
            alert("I ran through the whole script");
        </script>
    </head>
    <body>
    </body>
</html>
